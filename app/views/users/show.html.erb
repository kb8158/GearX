<h2 class="text-center"><%= @user.first_name%></h2>

<div class="contatiner">
  <div class="row">
    <div class="col-lg-4 center-block pro">
      <p><%= image_tag(@user.profile_photo) %> </p>
    </div>
    <div class="col-lg-8 pro">
      <h3>About my Trips:</h3>
      <p><%= @user.profile %></p>
    </div>
  </div>
</div>

<div class="container">
  <h3>Items Borrowed:</h3>
</div>

<div class="container">
  <div class="col-lg-12 ">
    <% @items.each do |item| %>
      <div class="row review">
        <div class="col-lg-3">
          <h4><%= item.name%><h4>
          <% if item.borrower == current_user %>

            <button><a href="#myModal" data-toggle="modal">Add a Review</a></button>
                <div id="myModal" class="modal fade">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h1 class="modal-title text-center">What Did you think?</h1>
                            </div>
                            <div class="modal-body">
                              <%= form_for [@item, @review]  do |f| %>
                            <div class="row">
                            <div class="col-lg-6 ">
                              <div class="field">
                                <%= f.label :body, "Description" %><br>
                                <%= f.text_field :body %>
                              </div>
                            </div>
                            <div class="col-lg-6 ">
                               <div class="actions">
                                 <br>
                                  <%= f.submit "Add Review"%>
                               </div>
                              <% end %>
                            </div>
                          </div>
                        </div>
                    </div>
                  </div>
                </div>


            <button><%= link_to "Deselect This Item", "/items/#{item.id}/selected", method: :post, data: { confirm: "Are you sure?" }%></button>
          <% end %>
        </div>
        <% @reviews.each do |review| %>
          <div class="col-lg-6">
            <%if item.id == review.item.id %>
              <h4>Review: <%= review.body %></h4>
          </div>
            <div class="col-lg-3">
              <% if review.user == item.borrower %>
                <button><%= link_to "Update Review", "items/#{item.id}/reviews/#{review.id}/edit", params:{review: review.id}%></button><br>
              <% end %>
              <% if review.user == item.borrower %>
                <button><%= link_to "Delete", "/items/#{item.id}/reviews/#{review.id}", method: :delete, params:{review: review.id}, data: {confirm: "Are you sure?"} %></button>
              <% end %>
              <% end %>
            </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>



<div class="contatiner">
  <div class="row">
    <h4 class="text-center"><%= link_to "Back To List of Explorers", users_path %></h4>
  </div>
</div>

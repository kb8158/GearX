<h1 class="text-center"><a href="#myModal" data-toggle="modal">What are you looking for?</a></h1>
    <div id="myModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h1 class="modal-title text-center">What Gear Are you Looking for?</h1>
                </div>
                <div class="modal-body">
                  <%= form_for(@new_thing) do |f| %>
                  <div class="row">
                    <div class="col-lg-6 ">
                  <div class="field">
                    <%= f.label :name, 'Name' %><br>
                    <%= f.text_field :name %><br>
                  </div>
                </div>
                <div class="col-lg-6 ">
                  <div class="field">
                    <%= f.label :days, "Duration of trip?" %><br>
                    <%= f.text_field :days %><br>
                  </div>
                </div>
              </div>
                <div class="row">
                  <div class="col-lg-6 ">
                    <div class="field">
                      <%= f.label :date, "Date Needed" %><br>
                      <%= f.text_field :date %><br>
                    </div>
                </div>
                <div class="col-lg-6 ">
                  <div class="field">
                    <%= f.label :zip_code, "Location" %><br>
                    <%= f.text_field :zip_code %><br>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-6 ">
                  <div class="field">
                    <%= f.label :body, "Description" %><br>
                    <%= f.text_field :body %>
                  </div>
                </div>
                <div class="col-lg-6 ">
                   <div class="actions">
                     <br>
                      <%= f.submit "Add Query"%>
                   </div>
                  <% end %>
                </div>
              </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="root"></div>

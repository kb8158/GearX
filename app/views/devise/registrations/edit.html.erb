<h2 class="text-center">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
<div class="container">
  <div class="col-lg-9 text-center form">
    <div class="row">
      <div class="col-lg-6">
        <div class="field">
          <%= f.label :email, 'Email' %><br>
          <%= f.email_field :email, autofocus: true %>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="field">
          <%= f.label :profile, 'About my trips:' %><br>
          <%= f.text_field :profile, autofocus: true %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-6">
        <div class="field">
          <%= f.label :current_password, "Current Password" %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "off" %>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="field">
          <%= f.label :profile_photo, 'Profile Picture', :class => "review_heading" %>
          <%= f.file_field :profile_photo, autofocus: true %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-6">
        <div class="field">
          <%= f.label :password, "Password" %> <i>(leave blank if you don't want to change it)</i><br />
          <%= f.password_field :password, autocomplete: "off" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>
      </div>
      <div class="col-lg-6">
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label :password_confirmation, "Password Confirmation" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-1">
        <div class="actions">
          <%= f.submit "Update" %>
        </div>
      <% end %>
      </div>
      <div class="col-lg-5">
        <div class="link">
        <%= link_to "Back To Home", root_path %>
        </div>
      </div>
      <div class="col-lg-3">
        <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
      </div>
    </div>
  </div>
</div>

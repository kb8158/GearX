<h2 class="text-center">Sign up</h2>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div class="container">
   <div class="col-lg-6 text-center form">
     <div class="row">
       <div class="col-lg-6">
         <div class="field">
            <%= f.label :first_name, 'First Name' %><br>
            <%= f.text_field :first_name, autofocus: true %>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="field">
            <%= f.label :last_name, 'Last Name' %><br>
            <%= f.text_field :last_name, autofocus: true %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-6">
          <div class="field">
            <%= f.label :email, 'Email' %><br>
            <%= f.email_field :email, autofocus: true %>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="field">
            <%= f.label :profile, 'About my trips:' %><br>
            <%= f.text_field :profile, autofocus: true %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-6">
          <div class="field">
            <%= f.label :password, "Password" %><br>
            <%= f.password_field :password, autocomplete: "off", placeholder: "6 characters minimum" %>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="field">
            <%= f.label :password_confirmation, 'Password Confirmation' %><br>
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
          </div>
        </div>
      </div>
    <div class="row">
      <div class="col-lg-6">
        <div class="field">
          <%= f.label :profile_photo, 'Profile Picture', :class => "review_heading" %>
          <%= f.file_field :profile_photo, autofocus: true %><br>
        </div>
      </div>
      <div class="col-lg-6 ">
        <div class="actions field">
          <%= f.submit "Sign Up" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
  <h5 class="text-center"><%= render "devise/shared/links" %><%= link_to "Back To Home", root_path %></h5>

  <h2 class="text-center">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="container">
  <div class="col-lg-6 text-center form">
    <div class="row" >
      <div class="col-lg-6">
        <div class="field">
          <%= f.label :email, "Email"%><br />
          <%= f.email_field :email, autofocus: true %>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="field">
          <%= f.label :password, "Password" %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>
      </div>
    </div>
    <div class="container login">
      <div class="row">
        <div class="col-lg-5">
            <div class="actions">
              <%= f.submit "Log in" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<h5 class="text-center"><%= render "devise/shared/links" %></h5>

<h1 class= "text-center">Add Gear Form</h1>

  <%= form_for(@item) do |f| %>

<div class="container">
    <div class="row">
      <div class="col-lg-6 ">
        <div class="field">
          <%= f.label :name, 'Name' %><br>
          <%= f.text_field :name %><br>
        </div>
      </div>
      <div class="col-lg-6 ">
        <div class="field">
          <%= f.label :image, "Image" %><br>
          <%= f.text_field :image %><br>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6 ">
        <div class="field">
          <%= f.label :size, "Size" %><br>
          <%= f.text_field :size %><br>
        </div>
      </div>
      <div class="col-lg-6 ">
        <div class="field">
          <%= f.label :zip_code, "Location" %><br>
          <%= f.text_field :zip_code %><br>
        </div>
      </div>
    </div>


    <div class="row">
      <div class="col-lg-6">
        <div class="field">
          <%= f.label :body, "Description" %><br>
          <%= f.text_field :body %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6">
         <div class="actions">
            <%= f.submit "Add Item"%>
         </div>
        <% end %>
    <%= link_to "Back To Items", items_path %>
  </div>
</div>

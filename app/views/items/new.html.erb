<h1 class= "text-center">Add Gear Form</h1>

  <%= form_for(@item) do |f| %>

<div class="container">
    <div class="row">
      <div class="col-md-6 ">
        <div class="field">
          <%= f.label :name, 'Name' %><br>
          <%= f.text_field :name %><br>
          <%= f.label :image, "Image" %><br>
          <%= f.text_field :image %><br>
          <%= f.label :size, "Size" %><br>
          <%= f.text_field :size %><br>
          <%= f.label :zip_code, "Location" %><br>
          <%= f.text_field :zip_code %><br>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="field">
          <%= f.label :body, "Description" %><br>
          <%= f.text_field :body %>
        </div>
      </div>
    </div>
  </div>
<div class="page">
   <div class="actions">
      <%= f.submit "Add Item"%>
   </div>
<% end %>

<p><%= link_to "Back To Items", items_path %></p>
</div>

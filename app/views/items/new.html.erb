<h1 class= "text-center">Add Gear Form</h1>

  <%= form_for(@item) do |f| %>

<div class="container">
    <div class="row">
      <div class="col-md-6 ">
        <div class="field">
          <%= f.label :name, 'Name' %>
          <%= f.text_field :name %>
          <%= f.label :image, "Image" %>
          <%= f.text_field :image %>
          <%= f.label :size, "Size" %>
          <%= f.text_field :size %>
          <%= f.label :zip_code, "Location" %>
          <%= f.text_field :zip_code %>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="field">
          <%= f.label :body, "Description" %>
          <%= f.text_field :body %>
        </div>
      </div>
    </div>
  </div>

   <div class="actions">
      <%= f.submit "Add Item"%>
   </div>
<% end %>
<p><%= link_to "Back To Items", items_path %></p>

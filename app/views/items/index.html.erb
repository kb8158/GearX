<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="text-center"><a href="#myModal" data-toggle="modal">Add Gear to Lend</a></h1>
      <div id="myModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h1 class="modal-title text-center">Add Gear to Lend</h1>
                </div>
                <div class="modal-body">
                  <%= form_for(@new_item) do |f| %>
                  <div class="row">
                    <div class="col-lg-6 ">
                  <div class="field">
                    <%= f.label :name, 'Name' %><br>
                    <%= f.text_field :name %><br>
                  </div>
                </div>
                <div class="col-lg-6 ">
                  <div class="field">
                    <%= f.label :image, "Image" %><br>
                    <%= f.text_field :image %><br>
                  </div>
                </div>
              </div>
                <div class="row">
                  <div class="col-lg-6 ">
                  <div class="field">
                    <%= f.label :size, "Size" %><br>
                    <%= f.text_field :size %><br>
                  </div>
                </div>
                <div class="col-lg-6 ">
                  <div class="field">
                    <%= f.label :zip_code, "Location" %><br>
                    <%= f.text_field :zip_code %><br>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-6 ">
                  <div class="field">
                    <%= f.label :body, "Description" %><br>
                    <%= f.text_field :body %>
                  </div>
                </div>
                <div class="col-lg-6 ">
                   <div class="actions">
                     <br>
                      <%= f.submit "Add Item"%>
                   </div>
                  <% end %>
                </div>
              </div>
            </div>
        </div>
      </div>
    </div>
      <div id="app"></div>
    </div>
  </div>
</div>
<div>
  <h1 class="text-center">Gear Checked out</h1>
  <div id="check"></div>
</div>

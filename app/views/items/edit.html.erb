<h1 class= "text-center">Update Gear Form</h1>

<%= form_for(@item) do |f| %>

<div class="container">
  <div class="col-lg-6 text-center form">
    <div class="row">
      <div class="col-lg-6 ">
        <div class="field">
          <%= f.label :name, 'Name' %><br>
          <%= f.text_field :name %><br>
        </div>
      </div>
      <div class="col-lg-6 ">
        <div class="field">
          <%= f.label :image, "Image" %><br>
          <%= f.text_field :image %><br>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6 ">
        <div class="field">
          <%= f.label :size, "Size" %><br>
          <%= f.text_field :size %><br>
        </div>
      </div>
      <div class="col-lg-6 ">
        <div class="field">
          <%= f.label :zip_code, "Location" %><br>
          <%= f.text_field :zip_code %><br>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6">
        <div class="field">
          <%= f.label :body, "Description" %><br>
          <%= f.text_field :body %>
        </div>
      </div>
         <div class="col-lg-6">
           <div class="field">
           </br> 
            <button><%= link_to "Change Availability", "/items/#{@item.id}/available", method: :post%></button>
           </div>
         </div>
       </div>
          <div class="row">
           <div class="col-lg-12">
              <div class="actions">
                <br>
                 <%= f.submit "Add Item"%>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<h5 class="text-center"><%= link_to "Back To Items", items_path %></h5>

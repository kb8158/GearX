<h1 class="text-center"><%= @item.name %> </h1>

<div class="container">
  <div class="row">
    <div class="col-md-4 box1">
      <div class="product">
        <%= image_tag(@item.image) %>
      </div>
    </div>
    <div class="col-md-8">
      <p> Description: <%= @item.body %> </p>
      <p> Location: <%= @item.zip_code %></p>
      <p> Size: <%= @item.size %></p>
    </div>
  </div>
</div>

<h1 class="text-center"><a href="#myModal" data-toggle="modal">Add a Review</a></h1>
<div id="myModal" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
          <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              <h1 class="modal-title text-center">Add a Review</h1>
          </div>
          <div class="modal-body">
            <%= form_for [@item, @review] do |f| %>
          <div class="row">
            <div class="col-lg-12 ">
              <div class="field">
                <%= f.label :body, "Description" %><br>
                <%= f.text_field :body %>
              </div>
            </div>
          </div>
          <div class= "row">
            <div class="col-lg-12 ">
               <div class="actions">
                 <br>
                  <%= f.submit "Add review"%>
               </div>
              <% end %>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>


  <div class="col-lg-12 ">
    <% @reviews.each do |review| %>
      <div class="col-lg-6">
          <h4>Review: <%= review.body %></h4>
        <div class="col-lg-3">
          <% if review.user == item.borrower %>
            <button><%= link_to "Update Review", "/items/#{item.id}/reviews/#{review.id}/edit", params:{review: review.id}%></button><br>
          <% end %>
          <% if review.user == item.borrower %>
            <button><%= link_to "Delete", "/items/#{item.id}/reviews/#{review.id}", method: :delete, params:{review: review.id}, data: {confirm: "Are you sure?"} %></button>
          <% end %>
        </div>
    <% end %>
  </div>
</div>





<% if @item.lender == current_user %>
  <div class="links">
    <p id="links_color"><%= link_to "Update Item Information", edit_item_path %></p>
    <p><%= link_to "Delete Item", @item, method: :delete %></p>
  </div>
<% end %>

<% if @item.lender != current_user %>
  <div class="links">
    <%= link_to "Select This Item", "/items/#{@item.id}/selected", method: :post, data: { confirm: "Are you sure?" } %>
    <%= link_to "De-Select This Item", "/items/#{@item.id}/selected", method: :post, data: { confirm: "Are you sure?" } %>
  </div>
<% end %>

<div class="links">
  <p><%= link_to "Back To Items", items_path %></p>
</div>

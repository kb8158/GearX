<h2 class="text-center"><%= @item.name %> </h2>

<div class="container">
  <div class="row">
    <div class="col-md-4">
        <%= image_tag(@item.image) %>
      </div>
    <div class="col-md-8">
      <h3> Description: <%= @item.body %> </h3>
    </div>
  </div>
</div>

<% if @item.lender == current_user %>
  <p id="links_color"><%= link_to "Update Item Information", edit_item_path %></p>
<% end %>

<% if @item.lender == current_user%>
  <div class="links">
    <p><%= link_to "Delete Item", @item, method: :delete %></p>
  </div>
<% end %>
<!-- POST	/item/:id/selected(.:format) -->
<div class="links">
  <%= link_to "Select This Item", "/items/#{@item.id}/selected", method: :post %>
</div>

<div class="links">
  <p><%= link_to "Back To Items", root_path %></p>
</div>

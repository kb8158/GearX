<h2 class="text-center"><%= @item.name %> </h2>

<div class="container">
  <div class="row">
    <div class="col-md-4">
        <%= image_tag(@item.image) %>
      </div>
    <div class="col-md-8">
      <h3> Description: <%= @item.body %> </h3>
    </div>
  </div>
</div>

<% if @item.user == current_user %>
  <p id="links_color"><%= link_to "Update Iten Information", edit_item_path %></p>
<% end %>

<% if @item.user == current_user%>
  <div class="links">
    <p><%= link_to "Delete Item", @item, method: :delete %></p>
  </div>
<% end %>
<div class="links">
  <p><%= link_to "Back To Items", root_path %></p>
</div>
